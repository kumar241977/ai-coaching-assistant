#!/usr/bin/env python3

import os
from dotenv import load_dotenv

# Load environment variables
load_dotenv()

def test_openai_api_key():
    """Test if OpenAI API key is present and has correct format"""
    
    api_key = os.getenv('OPENAI_API_KEY')
    
    print("ğŸ”‘ OpenAI API Key Test")
    print("=" * 50)
    
    if not api_key:
        print("âŒ No OPENAI_API_KEY found in environment")
        return False
    
    print(f"âœ… API Key present: {len(api_key)} characters")
    print(f"ğŸ” Format: {api_key[:15]}...{api_key[-4:]}")
    
    # Check if it looks like a valid OpenAI key
    if api_key.startswith('sk-proj-') and len(api_key) > 50:
        print("âœ… Key format looks correct (sk-proj-...)")
        valid_format = True
    elif api_key.startswith('sk-') and len(api_key) > 40:
        print("âœ… Key format looks correct (sk-...)")
        valid_format = True
    else:
        print("âŒ Key format looks incorrect")
        print("   Expected: sk-proj-... or sk-...")
        print(f"   Got: {api_key[:20]}...")
        valid_format = False
    
    # Try to make a test API call
    try:
        import openai
        client = openai.OpenAI(api_key=api_key)
        
        print("\nğŸ§ª Testing API connection...")
        response = client.chat.completions.create(
            model="gpt-3.5-turbo",
            messages=[{"role": "user", "content": "Test"}],
            max_tokens=5
        )
        print("âœ… API call successful!")
        return True
        
    except Exception as e:
        print(f"âŒ API call failed: {e}")
        error_str = str(e).lower()
        
        if "authentication" in error_str or "api_key" in error_str:
            print("ğŸ’¡ Issue: Invalid API key")
        elif "quota" in error_str or "billing" in error_str:
            print("ğŸ’¡ Issue: Insufficient quota or billing problem")
        elif "rate_limit" in error_str:
            print("ğŸ’¡ Issue: Rate limit exceeded")
        else:
            print(f"ğŸ’¡ Issue: {e}")
        
        return False

if __name__ == "__main__":
    success = test_openai_api_key()
    
    if not success:
        print("\nğŸš¨ Next Steps:")
        print("1. Get a fresh API key from: https://platform.openai.com/api-keys")
        print("2. Update OPENAI_API_KEY in your deployment environment")
        print("3. Restart your application") 
